pipeline {
    agent none
    stages {
        stage('Example Build') {
            agent any
            steps {
                echo 'Hello World'
            }
        }
        stage('Example Deploy') {
            agent any
            when {
                beforeInput true
                branch 'production'
            }
            input {
                message "Deploy to production?"
                id "simple-input"
            }
            steps {
                echo 'Deploying'
            }
        }
    }
}
